{% extends "base.jinja2" %}
{% block content %}
    <div class="form">
        <form action="{{ url_for('winvitations.create_winvitation') }}" method="post">
            <div class="form-group">
                <label for="inviteid">Invite ID</label>
                <input type="inviteid" class="form-control" id="inviteid" name="inviteid" placeholder="e.g: 0"
                       aria-describedby="inviteidHelpBlock">
                <span id="inviteidHelpBlock" class="help-block">Input the id of user you are inviting</span>
            </div>
            <button type="submit" class="btn btn-default">Send Invitation</button>
        </form>
    </div>
{% endblock %}