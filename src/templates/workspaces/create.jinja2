{% extends "base.jinja2" %}
{% block content %}
    <div class="form">
        <form action="{{ url_for('workspaces.create_workspace') }}" method="post">
            <div class="form-group">
                <label for="wname">Workspace Name</label>
                <input type="wname" class="form-control" id="wname" name="wname" placeholder="e.g: Rick's .Inc  Maximum length:50"
                       aria-describedby="wnameHelpBlock">
                <span id="wnameHelpBlock" class="help-block">Please select a proper name for your company workspace</span>
            </div>
            <div class="form-group">
                <label for="wdescript">Workspace Description</label>
                <input type="wdescript" class="form-control" id="wdescript" name="wdescript"
                placeholder="e.g: No hip hop at work!  Maximum length:100" aria-describedby="wdescriptHelpBlock">
                <span id="wdescriptHelpBlock" class="help-block">Short description for this workspace</span>
            </div>

            <button type="submit" class="btn btn-default">Create Now</button>
        </form>
    </div>
{% endblock %}